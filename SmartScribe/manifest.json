{
    "manifest_version": 3,
    "name": "SmartScribe",
    "version": "1.0",
    "description": "Polish your writing with AI. Our GPT-3 powered Chrome extension corrects grammar and can improve your writing on demand",
    "action": {
      "default_popup": "popup/popup.html"
    },
    "permissions": ["storage", "scripting", "activeTab"],
    "icons": { "16": "images/logo_transparent-16_x_16.png",
                "32": "images/logo_transparent-32_x_32.png",
                "48": "images/logo_transparent-48_x_48.png",
                "128": "images/logo_transparent-128_x_128.png"
    }
}